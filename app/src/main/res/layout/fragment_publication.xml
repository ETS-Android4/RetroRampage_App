<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_publication_size"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/fragment_publication"
    android:layout_gravity="center_horizontal">

    <ImageView

        android:src="@drawable/retro"
        android:layout_width="@dimen/width_publication_size"
        android:layout_height="@dimen/height_publication_size"
        android:id="@+id/image_view_fragment"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_linear_layout_description"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#d6d7d7">

        <ImageButton

            android:layout_weight="1"
            android:layout_width="@dimen/width_image_button"
            android:layout_height="@dimen/height_image_button"
            android:src="@drawable/ic_action_like"/>

        <TextView

            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@string/title_image"
            android:fontFamily="@font/alagard"
            android:textStyle="bold"

            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_publication"/>

        <ImageView

            android:layout_weight="1"
            android:layout_width="@dimen/width_image_button"
            android:layout_height="@dimen/height_image_button"
            android:src="@drawable/ic_action_like_full"/>

        <TextView

            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@string/likes_number"
            android:fontFamily="@font/alagard"
            android:textStyle="bold"

            android:gravity="right"
            android:textSize="@dimen/text_size_publication"/>

    </LinearLayout>



</LinearLayout>
