<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_between_publications"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/image_view_fragment"
        android:layout_width="@dimen/width_publication_size"
        android:layout_height="@dimen/height_publication_size"
        android:layout_gravity="center_horizontal" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d6d7d7"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_linear_layout_description">

        <ImageButton

            android:id="@+id/like_button_id"
            android:layout_width="@dimen/width_image_button"
            android:layout_height="@dimen/height_image_button"
            android:layout_weight="1"
            android:src="@drawable/ic_action_like" />

        <TextView

            android:id="@+id/title_image_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="9"

            android:fontFamily="@font/alagard"
            android:text="@string/title_image"
            android:textSize="@dimen/text_size_publication"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/like_number_id"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:fontFamily="@font/alagard"
            android:gravity="right"

            android:text="@string/likes_number"
            android:textSize="@dimen/text_size_publication"
            android:textStyle="bold" />

        <ImageView

            android:layout_width="@dimen/width_image_button"
            android:layout_height="@dimen/height_image_button"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_like_full" />

    </LinearLayout>


</LinearLayout>
