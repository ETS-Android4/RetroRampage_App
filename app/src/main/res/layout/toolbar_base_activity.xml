<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#010408">

    <ImageButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_return"
        android:visibility="invisible"
        android:id="@+id/return_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="center"
        android:textSize="@dimen/size_title_app"
        android:id="@+id/toolbar_title"
        android:textColor="#5D3FD3"
        android:fontFamily="@font/lazer84"/>

    <ImageButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_ranking"
        android:id="@+id/ranking_button"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"/>

</androidx.appcompat.widget.Toolbar>