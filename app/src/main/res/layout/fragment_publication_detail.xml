<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView

        android:layout_width="@dimen/width_image_size"
        android:layout_height="@dimen/height_image_size"
        android:src="@drawable/retro"/>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="@dimen/width_image_size"
            android:layout_height="wrap_content"

            android:text="@string/title_image"
            android:fontFamily="@font/alagard"
            android:textStyle="bold"
            android:padding="@dimen/padding_image_size"

            android:textColor="@color/black">

    </LinearLayout>



</LinearLayout>
